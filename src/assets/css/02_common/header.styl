.header
  display: flex
  align-items: center
  justify-content: space-between
  position: fixed
  top 0
  left 0
  width: 100%
  height 80px
  padding: 0 50px
  background-color $black
  border-bottom: solid 1px $gray
  z-index 100

.header-list
  display: flex

.header-item:not(:last-of-type)
  margin: 0 40px 0 0

.header-link
  font-size 16px
  letter-spacing 0.06em

.header-logo
  width 100px

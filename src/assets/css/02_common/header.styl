.header
  display: flex
  justify-content: space-between
  position: fixed
  top 0
  left 0
  width: 100%
  padding: 36px 40px 0
  z-index 100

.header-list
  display: flex
  padding: 22px 0 0 0

.header-item:not(:last-of-type)
  margin: 0 38px 0 0

.header-link
  font-size 15px
  font-family $carino
  font-variation-settings: "wght" 500;
  transition: font-variation-settings $base-duration, letter-spacing $base-duration;
  &:hover
    font-variation-settings: "wght" 700;
    letter-spacing 0.1em

page = index about service feature

for i in (page)
  .{i}
    & .header-item-{i}
      & .header-link
        font-variation-settings: "wght" 700;
        letter-spacing 0.1em

.header-logo
  & a
    display: block
    margin 0 0 16px 0
    font-size 60px
    font-family: $sixcaps;
    letter-spacing -0.018em

.header-text
  font-size 15px
  font-family: $helvetica
  line-height 1.2
  letter-spacing -0.018em
html
  remove_scrollbar()

body
  // background-color $black
  -webkit-text-size-adjust: 100%
  text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  -webkit-touch-callout: none
  font-family: '游ゴシック', YuGothic, 'ヒラギノ角ゴ ProN W3', 'Hiragino Kaku Gothic ProN', sans-serif
  font-size: 14px
  color: $white

main
  position: relative

img, picture, svg
  display: block
  width: 100%
  height: auto

ul, li
  list-style: none

a
  color: inherit
  text-decoration: inherit

.is-only-pc
  +mq()
    display: none

.is-only-sp
  +mq_min()
    display: none

#webgl{
  position: fixed
  top 0
  left 0
  width 100%
  height 100%
  pointer-events: none
}

.container
  width: vw(1080)
  margin 0 auto

.dg.ac
  top: 120px!important
